                                <label>@(property.DisplayName ?? property.PropertyName)</label>
                            </td>
                            <td>
                                <div>
                                    @Html.DropDownListFor(model => model.IdGroup, new SelectList((IEnumerable<Group>)ViewBag.Groups, "Id", "Name", "None"), new { @class = "form-control" })
