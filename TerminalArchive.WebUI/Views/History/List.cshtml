@using TerminalArchive.WebUI.HtmlHelpers
@model TerminalArchive.WebUI.Models.HistoryViewModel

@{
    ViewBag.Title = "Протокол работы";
}
<div>

    <h3>@ViewBag.Title</h3>

    @Html.Partial("TerminalInfo", Model.Terminal)

        <div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Дата</th>
                        <th>Терминал</th>
                        <th>Заказ</th>
                        <th>Состояние</th>
                        <th>Источник</th>
                        <th>Сообщение</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.History)
            {
                    <tr>
                        <td>@order.Date</td>
                        <td>@order.Terminal</td>
                        <td>@order.Order</td>
                        <td>@order.State</td>
                        <td>@order.Trace</td>
                        <td>@order.Message</td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="btn-group pull-right">
            @Html.PageLinks(Model.PagingInfo, x => Url.Action("List", new { page = x }))
        </div>
    </div>




