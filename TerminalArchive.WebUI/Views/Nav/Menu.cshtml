@model IEnumerable<MenuInfo>
@using TerminalArchive.WebUI.Models;

@*@Html.ActionLink("Домой", "List", "TerminalMonitoring", null,
    new { @class = "btn btn-block btn-default btn-lg" })*@

@foreach (var menu in Model)
{
    

        if (menu.SubItems?.Length > 0)
        {
            <li class="dropdown"> <a href="#" class="dropdown-toggle" data-toggle="dropdown">@menu.Text <b class="caret"></b></a>
                <ul class="dropdown-menu">
                    @for (int z = 0; z < menu.SubItems?.Length; z++)
                    {
                        <li>
                            @Html.RouteLink(menu.SubItems[z].Text,
                            new
                            {
                                controller = menu.SubItems[z].Controller,
                                action = menu.SubItems[z].Action,
                                page = 1
                            })
                        </li>
                    }
                </ul>
</li>
        }
        else
        {
            <li>
                @Html.RouteLink(menu.Text,
                new
                {
                    controller = menu.Controller,
                    action = menu.Action,
                    page = 1
                });
            </li>
        }


}
